@page "/login"

<h3>Login</h3>

<EditForm Model="UserSignInModel" OnValidSubmit="ExecuteLogin">
    
    <DataAnnotationsValidator />

    <div class="form-group row">
        <label for="email" class="col-form-label"> Email </label>
        <div>
            <InputText id="email" class="form-control" @bind-Value="UserSignInModel.EmailAddress" />
        </div>
    </div>

    <div class="form-group row">
        <label for="password" class="col-form-label"> Password </label>
        <div>
            <InputText type="password" id="password" class="form-control" @bind-Value="UserSignInModel.Password" />
        </div>
    </div>

    <div class="row">
        <button type="submit"> Log in</button>
    </div>
</EditForm>

