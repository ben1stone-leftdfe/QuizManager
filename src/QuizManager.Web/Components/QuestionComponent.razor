
<EditForm Model="Question" OnValidSubmit="SubmitEdit">
    
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-10">
                    @if (Editing == false)
                    {
                        <span class="align-middle"> @Question.QuestionText </span>
                    }
                    else
                    {
                        <InputText id="text" class="form-control" @bind-Value="Question.QuestionText" />
                    }

                    @**@
                </div>
                <div class="col-2 align-middle text-right">
                    @if (Editing == false)
                    {
                        <button class="btn btn-sm btn-secondary" @onclick="BeginEdit"> Edit </button>
                    }
                    else
                    {

                        <button class="btn btn-sm btn-success" type="submit"> Save </button>
                    }
                </div>
            </div>

            <span> </span>
        </div>
        <ul class="list-group list-group-flush">
            @foreach (var answer in Question.Answers)
            {
                <AnswerComponent Answer="answer" Editting="Editing" />
            }
            <li class="list-group-item text-center">
                <button class="btn btn-success btn-sm" @onclick="AddAnswer" disabled="@(AddAnswersDisabled)"> + </button>
            </li>
        </ul>
    </div>
</EditForm>


