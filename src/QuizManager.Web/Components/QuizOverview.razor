<div class="card">
    
    <div class="card-header"> @Quiz.Title </div>
    
    <div class="card-body">
        
        <p> @Quiz.Description</p>

        <div class="btn-group">
            @if (UserRole == "Editor")
            {
                <button class="btn btn-danger" @onclick="() => TriggerDeleteWarning(Quiz)"> Delete </button>
            }
            <NavLink class="btn btn-success" href="@($"/edit/{Quiz.Id}")"> @(UserRole.Equals("Editor") ? "Edit quiz" : "View quiz") </NavLink>
        </div>
    </div>
</div>
<br />

<ModalComponent @ref="Modal">
    <Title> Delete quiz </Title>

    <Body> Are you sure you want to delete this quiz? </Body>

    <Footer>
        <button type="button" class="btn btn-secondary" data-dismiss="modal"> Cancel </button>
        <button type="button" class="btn btn-danger" @onclick="TriggerDeleteQuiz"> Delete quiz </button>
    </Footer>
</ModalComponent>